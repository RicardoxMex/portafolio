            </div>
        </div>
    </section>
</Layout>

<style>
    .title {
        text-align: center;
        color: #fff;
        font-size: xx-large;
    }

    section {
        margin: 2rem auto;
        width: 100%;
        background-color: rgba(29, 29, 29, 0.74);
        border-radius: 10px;
        border: 1px solid #fff;
        padding: 0.5rem;
        color: #fff;
    }
    .description {
        color: #fff;
        padding: 1rem;
        font-size: 16pt;
    }
    .contact {
        margin-top: 2rem;
        text-align: center;
        width: 100%;
        color: #fff;
    }
    .contact-info {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .contact-item {
        width: 100%;
        background-color: #cecece;
        padding: 1rem;
        font-size: large;
        margin-top: 0.5rem;
        border-radius: 10px;

        color: #2b2b2b;
        cursor: pointer;
        text-decoration: none;
    }

    .contact-item:hover {
        background-color: #7a7a7a;
        color: #fff;
    }
    .contact-item i {
        margin-right: 1rem; /* Espacio horizontal alrededor del ícono */
    }
    /**/
    h2 {
        font-size: x-large;
        margin: 1rem auto;
        text-align: center;
    }

    h3 {
        font-size: large;
        margin: 1rem auto;
    }

