---
import Layout from "../layouts/Layout.astro";
---

{/* */}
<Layout
    title="MexAnCode"
    description="Soy Ricardo Antonio Mex Tun, desarrollador web y experto en soluciones Epicor. Explora mis proyectos, habilidades técnicas y contacta conmigo a través de GitHub o por correo electrónico."
>
    <section>
        <h1 class="title">&lt;MexAnCode/&gt; Antonio Mex</h1>
        <p class="description">
            Desarrollador web y de soluciones en Epicor, apasionado por la
            tecnología y por aprender nuevas cosas.
        </p>

        <div class="contact">
            <h2>Contacto</h2>
            <div class="contact-info">
                <a href="mailto:ricardo.mexan@gmail.com" class="contact-item">
                    <i class="fas fa-envelope"></i> Email
                </a>
                <a
                    href="/RicardoMex_CV.pdf"
                    target="_blank"
                    class="contact-item"
                >
                    <i class="fas fa-download"></i> CV
                </a>
                <a
                    href="https://github.com/RicardoxMex"
                    target="_blank"
                    class="contact-item"
                >
                    <i class="fab fa-github"></i> GitHub
                </a>
            </div>
        </div>
    </section>

    <section id="skills" class="section">
        <h2 class="sub-title">Habilidades Técnicas</h2>
        <div class="skills">
            <div>
                <h3>Desarrollo Web:</h3>
                <p class="code">
                    <img
                        width={70}
                        height={70}
                        class="p-logo"
                        src="/img/logo_HTML5.webp"
                        alt="logo HTML5"
                        title="HTML5"
                    />
