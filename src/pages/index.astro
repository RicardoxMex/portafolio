    </section>

    <section class="projects">
        <h2>Proyectos:</h2>

        <div class="works">
            <div class="project">
                <a href="https://secsa.pages.dev/"  target="_blank">
                    <img
                        width={70}
                        height={70}
                        src="/img/proyecto_SECSA.webp"
                        alt="Captura del proyecto SECSA"
                        title="SECSA"
                    />
                    <div class="overlay">
                        <div class="text">SECSA</div>
                    </div>
                </a>
                <p class="description">
                    Soluciones Estratégicas y Consultoría S.A. de C.V.
                </p>
            </div>
            <div class="project">
                <a href="https://talesforall.mexancode.com/" target="_blank">
                    <img
                        width={70}
                        height={70}
                        src="/img/proyecto_TalesForAll.webp"
                        alt="Captura del proyecto Tales For All"
